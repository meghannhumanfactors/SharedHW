<div id="theForm">
    <form action="get">
        <label>Your Name:</label>
        <input type="text" name="Name" />
        <br />
        <label>Email:</label>
        <input type="email" name="Email" />
        <br />
        <label> Subject:</label>
        <input type="text" name="Subject" />
        <label> Message:</label>
        <textarea rows="4"></textarea>
        <input type="submit" value="Send Message" />
    </form>
</div>
